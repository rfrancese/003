<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="${packageName}.${activityClass}" >

    <Button
        android:id="@+id/button_play"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_button"
        android:text="Play"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button_registrazione"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_play"
        android:layout_toLeftOf="@+id/button_play"
        android:background="@drawable/bg_button"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/button_registrazione"
        android:layout_toRightOf="@+id/button_play"
        android:background="@drawable/bg_button"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button_web"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/button_exit"
        android:layout_below="@+id/button_play"
        android:background="@drawable/bg_button"
        android:text="Tutorial"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button_classifica"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_play"
        android:layout_toLeftOf="@+id/button_play"
        android:background="@drawable/bg_button"
        android:text="Stats"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button_play"
        android:src="@drawable/cloud_small" />

</RelativeLayout>
